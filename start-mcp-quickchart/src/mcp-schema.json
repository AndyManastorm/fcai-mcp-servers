{
  "tools":[
    {
      "inputSchema":{
        "type":"object",
        "properties":{
          "options":{
            "type":"object"
          },
          "datasets":{
            "type":"array",
            "items":{
              "type":"object",
              "properties":{
                "backgroundColor":{
                  "oneOf":[
                    {
                      "type":"string"
                    },
                    {
                      "type":"array",
                      "items":{
                        "type":"string"
                      }
                    }
                  ]
                },
                "borderColor":{
                  "oneOf":[
                    {
                      "type":"string"
                    },
                    {
                      "type":"array",
                      "items":{
                        "type":"string"
                      }
                    }
                  ]
                },
                "data":{
                  "type":"array"
                },
                "additionalConfig":{
                  "type":"object"
                },
                "label":{
                  "type":"string"
                }
              },
              "required":[
                "data"
              ]
            }
          },
          "type":{
            "description":"Chart type (bar, line, pie, doughnut, radar, polarArea, scatter, bubble, radialGauge, speedometer)",
            "type":"string"
          },
          "title":{
            "type":"string"
          },
          "labels":{
            "description":"Labels for data points",
            "type":"array",
            "items":{
              "type":"string"
            }
          }
        },
        "required":[
          "type",
          "datasets"
        ]
      },
      "name":"generate_chart",
      "description":"Generate a chart using QuickChart"
    },
    {
      "inputSchema":{
        "type":"object",
        "properties":{
          "outputPath":{
            "description":"Path where the chart image should be saved. If not provided, the chart will be saved to Desktop or home directory.",
            "type":"string"
          },
          "config":{
            "description":"Chart configuration object",
            "type":"object"
          }
        },
        "required":[
          "config"
        ]
      },
      "name":"download_chart",
      "description":"Download a chart image to a local file"
    }
  ]
}